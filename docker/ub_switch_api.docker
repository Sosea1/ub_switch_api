FROM debian:bookworm

RUN apt-get update -y && apt-get install -y python3 python3-pip git python3-flask python3-flask-cors python3-flask-marshmallow
RUN mkdir -p /app/mount
WORKDIR /app
RUN git clone "https://github.com/Sosea1/ub_switch_api" --branch release-0 server
WORKDIR /app/server
EXPOSE 5000

CMD [ "python3", "runner.py" ]
